<body onload="setAction('polygon', 'click',getFeatureCode);">
<div id="topMapMenu" >
		<a style="text-decoration:none" style="CURSOR: hand" href="javascript:validateAddFeature();">[$i18n.getString( 'assignunit_map' )]</a>
		<a style="text-decoration:none" style="CURSOR: hand" href="javascript:showAllFeature();">[$i18n.getString( 'show_all_assigned' )]</a>
		<a style="text-decoration:none" style="CURSOR: hand" href="javascript:deleteFeature();">[$i18n.getString( 'delete_selected' )]</a>
		<a style="text-decoration:none" style="CURSOR: hand" href="javascript:deleteAllFeature();">[$i18n.getString( 'delete_all' )]</a>
		<a style="text-decoration:none" style="CURSOR: hand" href="javascript:showHideLabel();">[Label]</a>
		<a style="text-decoration:none" style="CURSOR: hand" href="javascript:zoomIn();" title="Zoom In">[ + ]</a>
		<a style="text-decoration:none" style="CURSOR: hand" href="javascript:zoomOut();" title="Zoom Out">[ - ]</a>
		<a style="text-decoration:none" style="CURSOR: hand" href="javascript:retoreZoom();" title="Retore">[ ~ ]</a>
		<a style="text-decoration:none" style="CURSOR: hand" href="javascript:showById('listChildren');" title="List Organisation Unit">[ < ]</a>
</div>
<div id="mapDiv">	
	<div id="divMap">
	 <embed id="map" src="map/$mapFile.mapFile" name="map" type="image/svg+xml" align="center"/>
	</div>		
</div>
<script type="text/javascript">
		
	var paddingTop = document.getElementById( "mapDiv" ).offsetTop;
	
	var windowHeight = window.innerHeight;
	
	var windowWidth = window.innerWidth;
	
	var frameHeight = windowHeight - paddingTop - 10;	
	
	document.getElementById( "mapDiv" ).style.height = frameHeight +"px";			
			
</script>

<div id="listChildren">
	<div class="closeButton" onclick="hideById('listChildren');">[x]</div>
	#foreach( $unit in $organisationUnitChildren)
	+ <input id="$unit.id" name="orgunitlink" type="button" style="background:none;border:none;color:#0000CC;CURSOR:hand;" onclick="javascript:void selectOrgunit('$unit.id','$unit.name');"  value="$unit.name"/><br>
	#end
</div>

<span id="message" style="position:fixed;bottom:20px;right:20px;width:200px;" onclick="hideById(this.id)"></span>

<div id="showAllAssigned" onclick="hideById(this.id);" style="display:none;">
</div>

<script type="text/javascript">
	$(document).ready(function(){
		$("#listChildren").draggable(); 		
	});
	
	var i18n_confirm_delete = '$encoder.jsEscape( $i18n.getString( "confirm_delete" ) , "'" )';
</script>
</body>


