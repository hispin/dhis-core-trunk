		<td><input type="text" id="name" name="name" style="width:20em"/></td>
	</tr>

	<tr>
		<td><label for="mandatory">$i18n.getString( "mandatory" )</td>
		<td><input type="checkbox" id="mandatory" name="mandatory" value="true" /></td>
