
<h3>$i18n.getString( "add_dataelementgroupset" )</h3>

<form id="addDataElementGroupSet" action="addDataElementGroupSet.action" method="post">

<table>
	<tr>
		<th colspan="2">$i18n.getString( "details" )</th>
	</tr>
	<tr>
		<td><label for="name">$i18n.getString( "name" ) <em title="$i18n.getString( "required" )" class="required">*</em></label></td>
		<td><input type="text" id="name" name="name" style="width:20em"></td>
	</tr>
	<tr>
		<td colspan="2" height="15px"></td>
	</tr>
</table>

<table>
	<tr>
		<th>$i18n.getString( "available_dataelementgroup" )</th><td></td><th>$i18n.getString( "selected_dataelementgroup" )</th>
	</tr>
	<tr>		
		<td><input type="text" id="availableFilter" onkeyup="filterAvailableDataElementGroups()" style="width:25em"></td>
		<td style="text-align:center">&lt; $i18n.getString( "filters" ) &gt;</td>
		<td><input type="text" id="selectedFilter" onkeyup="filterSelectedDataElementGroups()" style="width:25em"></td>
	</tr>
	<tr>
		<td>
			<select id="availableDataElementGroups" size="2" multiple="multiple" style="min-width:25em; height:25em" ondblclick="addGroupMembers()">
			</select>
		</td>
		
		<td style="text-align:center">			
			<input type="button" value="&gt;" title="$i18n.getString('move_selected')" onclick="addGroupMembers()"><br>
			<input type="button" value="&lt;" title="$i18n.getString('remove_selected')" onclick="removeGroupMembers()">			
		</td>
	
		<td>
			<select id="selectedDataElementGroups" name="selectedDataElementGroupIds" size="2" multiple="multiple" style="min-width:25em; height:25em" ondblclick="removeGroupMembers()" />
		</td>
	</tr>
</table>

<p><input type="button" value="$i18n.getString( "add" )" style="width:10em" onclick="validateAddDataElementGroupSet()"/><input type="button" value="$i18n.getString( "cancel" )" onclick="window.location.href='listDataElementGroupSet.action'" style="width:10em"></p>

</form>

<span id='message' style="position:fixed;top:80px;right:5px;"></span>

<script type="text/javascript">

	var selectedDataElementGroups = new Object();
	
	var availableDataElementGroups = new Object();
#foreach( $dataElement in $dataElementGroups )
	availableDataElementGroups['$dataElement.id'] = '$encoder.jsEscape( $dataElement.name, "'" )';
#end

	initLists();

	var nameField = document.getElementById( 'name' );
	nameField.select();
	nameField.focus();

</script>
