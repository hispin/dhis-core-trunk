<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.sf.docbook</groupId>
  <artifactId>docbook-sample</artifactId>
  <name>DHIS2 Documentation system</name>
  <packaging>pom</packaging>
  <version>1.0.0</version>
  <description>Sample of DocBook maven artifacts</description>
  <url>http://sourceforge.net/projects/docbook/</url>

<build>
    <plugins>
 <plugin>
        <groupId>com.agilejava.docbkx</groupId>
        <artifactId>docbkx-maven-plugin</artifactId>
        <configuration>
<htmlStylesheet>images/docbook_bsd.css</htmlStylesheet>

          <postProcess>
            <copy todir="target/site">
              <fileset dir="target/docbkx">
                <include name="**/*.html" />
                <include name="**/*.pdf" />
              </fileset>
            </copy>
            <copy todir="target/site/html/images">
              <fileset dir="src/docbkx/resources/images">
                <include name="**/*.css" />
                <include name="**/*.png" />
                <include name="**/*.gif" />
                <include name="**/*.jpg" />
              </fileset>
            </copy>
          </postProcess>
        </configuration>
      </plugin>
    
</plugins>
  </build>
</project>
